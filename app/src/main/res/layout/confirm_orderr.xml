<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="30sp"
    tools:context=".ConfirmOrdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/COA_back_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/baumans"
            android:gravity="center"
            android:text="Confirm Address"
            android:textColor="@color/black"
            android:textSize="47dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Address"
                card_view:boxStrokeColor="@color/black"
                card_view:boxStrokeWidthFocused="2dp"
                card_view:endIconMode="clear_text"
                card_view:endIconTint="@color/black"
                card_view:hintTextColor="@color/black"
                card_view:startIconDrawable="@drawable/menu"
                card_view:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/baumans"
                    android:inputType="text"
                    android:textColor="@color/black" />


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter City"
                card_view:boxStrokeColor="@color/black"
                card_view:boxStrokeWidthFocused="2dp"
                card_view:endIconMode="clear_text"
                card_view:endIconTint="@color/black"
                card_view:hintTextColor="@color/black"
                card_view:startIconDrawable="@drawable/menu"
                card_view:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/baumans"
                    android:inputType="text"
                    android:textColor="@color/black" />


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Zip"
                card_view:boxStrokeColor="@color/black"
                card_view:boxStrokeWidthFocused="2dp"
                card_view:endIconMode="clear_text"
                card_view:endIconTint="@color/black"
                card_view:hintTextColor="@color/black"
                card_view:startIconDrawable="@drawable/menu"
                card_view:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/baumans"
                    android:inputType="text"
                    android:textColor="@color/black" />


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Country"
                card_view:boxStrokeColor="@color/black"
                card_view:boxStrokeWidthFocused="2dp"
                card_view:endIconMode="clear_text"
                card_view:endIconTint="@color/black"
                card_view:hintTextColor="@color/black"
                card_view:startIconDrawable="@drawable/menu"
                card_view:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/baumans"
                    android:inputType="text"
                    android:textColor="@color/black" />


            </com.google.android.material.textfield.TextInputLayout>





            <Button
                android:id="@+id/con"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/black"
                android:text="Continue"
                android:textColor="@color/white" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>